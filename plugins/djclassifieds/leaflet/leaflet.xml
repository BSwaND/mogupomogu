			</fieldset>
			<fieldset name="advanced">
				<field pattern="^\d+(\.\d+)*$" name="ver" type="text" default="1.3.4" label="PLG_DJCLASSIFIEDS_LEAFLET_VERSION" description="PLG_DJCLASSIFIEDS_LEAFLET_VERSION_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>
