	<authorUrl>http://dj-extensions.com</authorUrl>
	<version>3.7.9</version>
	<description>PLG_DJCLASSIFIEDS_LEAFLET_DESCRIPTION</description>
	<files>
		<filename plugin="leaflet">leaflet.php</filename>
		<filename>index.html</filename>
